	<!-- 项目中的拦截器、主要用作log处理 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<bean class="com.coffee.app.LogInterceptor"></bean>
		</mvc:interceptor>
	</mvc:interceptors>
</beans>